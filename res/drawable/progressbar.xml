<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:duration="1"
    android:toDegrees="360" >
    <!--/*Duration = 1 means that the rotation will be done in 1 second*/
    /*increase duration if you want to speed up the rotation*/-->

<shape
android:innerRadiusRatio="3"
android:shape="ring"
android:thicknessRatio="6"
android:useLevel="false" >
<size
    android:height="100dp"
    android:width="100dp" />

<gradient
    android:centerY="0.50"
    android:startColor="@color/app_color_transparent"
    android:centerColor="@android:color/holo_orange_light"
    android:endColor="@android:color/holo_orange_dark"
    android:type="sweep"
    android:useLevel="false" />
</shape>

    </rotate>