<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:giraf="http://giraf.cs.aau.dk"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

    <PreferenceCategory
            android:title="HjemmeskÃ¦rm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <Switch
        android:id="@+id/toggle_gray_scale"
        android:key="@string/show_grayscale_preference_key"
        android:title="@string/setting_grayscale_title"
        android:summary="@string/setting_grayscale_summary"
        android:switchTextOff="@string/setting_launcher_animation_off"
        android:switchTextOn="@string/setting_launcher_animation_on"
        android:defaultValue="false"
        android:layout_gravity="left"/>

    <dk.aau.cs.giraf.launcher.settings.components.ApplicationGridResizer
            android:id="@+id/icon_resizer"
            android:key="@string/grid_size_preference_key"
            android:title="@string/setting_launcher_grid_size_title"
            android:summary="@string/setting_launcher_grid_size_summary"
            android:defaultValue="4"
            android:max="7"
            giraf:min="2"/>

</PreferenceScreen>